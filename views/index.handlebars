


<div class="container">
  <div class="text-center">
  <div class="jumbotron">
<h1 class="text-center">Welcome to Good Burger!</h1>
<h2 class="text-center">What Kind of Burger would you like?</h2>
    </hr>

    <h2>Add a Burger</h2>
    <form class="create-form">
      <div class="form-group">
        <input type="text" id="newburger" name="name">
      </div>
      <button type="submit" class="btn btn-success">Add</button>
      
    </form>

  </div>
  <img src="assets/image/burger.png" style="height: 200px; width:auto">
  </div>

  <div class="row">
    <div class=col-sm-6>
      <h3>Burgers Ready</h3>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          <span>{{this.burger_name}}</span>
          <button type="button" class="devourit btn btn-warning" id="devourit" data-id="{{this.id}}"
            data-newDevoured="{{devour}}"><span>Eat It!</span></button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

<div class="col-sm-6">
    <h3>Devoured Burgers</h3>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <li>
        <span>{{this.burger_name}}</span>
      </li>
      {{/if}}
      {{/each}}
    </ul>
    </div>
  </div>

</div>

 